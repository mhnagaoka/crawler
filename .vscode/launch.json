  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "address": "172.31.0.66",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.js",
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "showAsyncStacks": true,
      "smartStep": true
    }
  ]
}
